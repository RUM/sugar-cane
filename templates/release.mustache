<link rel="stylesheet" href="/stylesheets/release.css">

<script src="/javascripts/loadasset.js"></script>

{{# release}}
<header style="background-image: url({{cover}})">
  <div class="fuzz"></div>

  <h4>{{month_year}}</h4>
  <h1>{{name}}</h1>

  <br>

  {{# file}}
  <strong><a href="{{file}}" target="_blank" download="{{file_seo_name}}">{{> download_svg}}&nbsp;Descargar PDF</a></strong>
  {{/ file}}
</header>
{{/ release}}

<main>
  <nav id="sub-nav">
    {{# sections}}
    <a href="#{{section_name}}" class="{{section_name}}">{{section_name}}</a>
    {{/ sections}}
  </nav>

  <section id="release-quote"
           class="no-mobile">
    {{# quotes}}
    <blockquote>
      {{# md}}{{content}}{{/ md}}
      <strong style="flex: 0 0 100%; text-align: right;">- {{author}}</strong>
    </blockquote>
    {{/ quotes}}
  </section>

  {{# sections}}
  <section class="{{section_name}}">
    <a href="#sub-nav">
      <h2 id="{{section_name}}" class="{{section_name}}">
        <span style="float: right; margin-right: 0.5em;" class="no-desktop">
          <svg style="width:24px;height:24px" viewBox="0 0 24 14">
            <path d="M13,20H11V8L5.5,13.5L4.08,12.08L12,4.16L19.92,12.08L18.5,13.5L13,8V20Z" />
          </svg>
        </span>
        {{section_name}}
      </h2>
    </a>

    {{# articles}}
    {{^ is_multimedia}}
    {{> article_thumb}}
    {{/ is_multimedia}}

    {{# is_multimedia}}
    {{> article_thumb_multimedia}}
    {{/ is_multimedia}}
    {{/ articles}}
  </section>
  {{/ sections}}
</main>
