<link rel="stylesheet" href="/stylesheets/collab-thumb.css">
<link rel="stylesheet" href="/stylesheets/release-thumb.css">
<link rel="stylesheet" href="/stylesheets/index.css">

<main>
  <section id="latest-releases">
    {{# latest_releases}}
    {{> release_thumb}}
    {{/ latest_releases}}
  </section>

  <section id="selection">
    <a href="/archive">
      <h2 style="background-color: #DD9980;
          border-top: 3px solid #6a3724;">Art√≠culos Destacados</h2>
    </a>

    {{# articles_suggestion}}
    {{> article_thumb}}
    {{/ articles_suggestion}}
  </section>

  {{# latest_post}}
  <section id="blog">
    <a href="/blog">
      <h2 style="background-color: #666;
                 border-top: 3px solid #000;">Blog</h2>
    </a>

    <article class="article-thumb"
             onclick="window.location = '{{{link}}}';">
      {{# cover}}
      <figure style="background-image: url({{cover}});"></figure>
      {{/ cover}}

      {{^ cover}}
      <figure style="background-image: url(/images/rum-u-black.png);
                     background-size: auto 100%;"></figure>
      {{/ cover}}

      <div>
        <label class="section-label">Blog</label>
        <span class="section-label"> / </span>
        <label class="section-label">{{category}}</label>

        <h3>
          <a href="{{{link}}}" target="_blank">
            <p>{{{title.rendered}}}</p>
          </a>
        </h3>

        <ul class="collabs-list">
          {{# _embedded.author}}
          <li>
            <em>{{name}}</em>
          </li>
          {{/ _embedded.author}}
        </ul>

        <span style="font-size: small;">{{created}}</span>
      </div>
    </article>
  </section>
  {{/ latest_post}}

  <section id="collabs">
    <a href="/collabs">
      <h2 style="background-color: #1b203f;
                 border-top: 3px solid #33494d;">Colaboradores</h2>
    </a>

    {{# collaborators}}
    {{> collab_thumb}}
    {{/ collaborators}}
  </section>

  <section id="suggestions">
    <a href="/suggestions">
      <h2 style="background-color: #048a81;
                 border-top: 3px solid #185463;">La RUM recomienda</h2>
    </a>

    {{# suggestions}}
    {{> suggestion_thumb}}
    {{/ suggestions}}
  </section>
</main>
