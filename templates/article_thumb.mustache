<article class="article-thumb {{section_name}}"
         onclick="window.location = '/articles/{{id}}/{{seo_title}}';">
  <figure style="background-image: url({{cover}});"></figure>

  <div>
    {{# release_name}}
    <label class="section-label">{{release_name}}</label>
    {{/ release_name}}

    {{# section_name}}
    <span class="section-label"> / </span>
    <label class="{{section_name}} section-label">{{section_name}}</label>
    {{/ section_name}}

    {{# metadata.subsection}}
    <span class="section-label"> - </span>
    <label class="subsection-label {{section_name}}">{{metadata.subsection}}</label>
    {{/ metadata.subsection}}

    <h3>
      <a href="/articles/{{id}}/{{seo_title}}">{{# md}}{{title}}{{/ md}}</a>
    </h3>

    <ul class="collabs-list">
      {{# collaborations}}
      <li>
        {{# collabs}}
        <em>{{name}}</em>
        {{/ collabs}}
      </li>
      {{/ collaborations}}
    </ul>

    <div class="translations">
      {{# metadata.translations}}
      <a href="/articles/{{article_id}}">{{language}}</a>
      {{/ metadata.translations}}
    </div>
  </div>
</article>
